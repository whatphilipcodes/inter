{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Test",
      "type": "shell",
      "command": "yarn run electron-forge start",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "showReuseMessage": true,
        "clear": true
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "yarn run electron-forge make",
      "windows": {
        "command": "./build.bat"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "showReuseMessage": true,
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}